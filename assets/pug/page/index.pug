extends ../layout/head.pug 
block content
    main.page

        .swiper.my-swiper
            .swiper-wrapper

                .swiper-slide
                    include ../block/hero-section.pug

                .swiper-slide.swiper-no-mousewheel

                        section.product-section
                            .text-wrap.text-wrap__top
                                p
                                    span Видео
                            .text-wrap.text-wrap__bottom
                                p
                                    span Видео
                                    
                            .swiper.my-swiper2
                                .swiper-wrapper

                                    .swiper-slide
                                        .product-wrap
                                            .product
                                                video(src="images/Video.mp4" muted="muted" poster="images/poster.png") 
                                                .product__cta
                                                    button.product__btn.product__btn--play

                                    .swiper-slide
                                        .product-wrap
                                            .product
                                                img(src="images/product.jpg", alt="")
                                                .product__cta
                                                    a.product__btn.product__btn--link(href="#") 

                .swiper-slide
                    include ../block/form-section.pug


        